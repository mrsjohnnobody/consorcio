<!DOCTYPE html>
<html lang="pt-br">
  <%- include("../global/head", {pageCss: 'home'}); %>

  <body>
    <%- include("../../partialViews/header"); %> <%-
    include("../../partialViews/navbar", {activeNavItem: 'Inicio'}); %>

    <!--noticias-->
    <% if(latestnews.length == 3){ %>
    <div class="container-fluid">
      <div
        class="row px-5 containerItem row mt-4 m-3 p-3 justify-content-center"
      >
        <div
          id="carouselExampleDark"
          class="carousel carousel-dark slide p-5 ps-0"
          data-bs-ride="carousel"
        >
          <h5 class="text-center fw-bold">ÚLTIMAS NOTÍCIAS</h5>
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleDark"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleDark"
              data-bs-slide-to="1"
              aria-label="Slide 2"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleDark"
              data-bs-slide-to="2"
              aria-label="Slide 3"
            ></button>
          </div>
          <div class="carousel-inner fw-bold">
            <div class="carousel-item active" data-bs-interval="10000">
              <img
                src="/<%= latestnews[0].image %>"
                class="d-block w-100"
                alt="Notícia"
              />
              <div class="texto carousel-caption d-none d-md-block">
                <h5 style="font-size: 2em"><%= latestnews[0].title %></h5>
              </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
              <img
                src="/<%= latestnews[1].image %>"
                class="d-block w-100"
                alt="Notícia"
              />
              <div class="texto carousel-caption d-none d-md-block">
                <h5 style="font-size: 2em"><%= latestnews[1].title %></h5>
              </div>
            </div>
            <div class="carousel-item">
              <img
                src="/<%= latestnews[2].image %>"
                class="d-block w-100"
                alt="Notícia"
              />
              <div class="texto carousel-caption d-none d-md-block">
                <h5 style="font-size: 2em"><%= latestnews[2].title %></h5>
              </div>
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Próximo</span>
          </button>
        </div>
      </div>
    </div>
    <% } %>

    <!--acesso, lrf, ouvidoria, esic-->
    <div class="container-fluid">
      <div class="containerItem row mt-4 m-3 p-3 justify-content-center">
        <!--sessão pdf-->
        <div id="cardGroupHome" class="card-group">
          <!-- transparencia -->
          <div class="card d-flex justi">
            <div class="card-body">
              <h5 class="card-title">Acesso a Informação</h5>
              <div class="homeDocumentosDivisor my-2"></div>

              <% for(var i=0; i < licitacoes.length; i++) {%>
              <div class="mb-2">
                <a href="/user/licitacao/<%=licitacoes[i].id%>">
                  <img src="/icons/filetype-pdf.svg" alt="" />
                  <%=licitacoes[i].ProcessNumber%>
                </a>
                <br />
              </div>
              <% } %>
            </div>
          </div>
          <!-- lrf -->
          <div class="card d-flex justi">
            <div class="card-body">
              <h5 class="card-title">Lei de Responsabilidade Fiscal</h5>
              <div class="homeDocumentosDivisor my-2"></div>

              <% for(var i=0; i < contratos.length; i++) {%>
              <div class="mb-2">
                <a href="/<%=contratos[i].path%>">
                  <img src="/icons/filetype-pdf.svg" alt="" />
                  <%=contratos[i].Numero%>
                </a>
                <br />
              </div>
              <% } %>
            </div>
          </div>
          <!-- ouvidoria -->
          <div class="card d-flex justi">
            <div class="card-body">
              <h5 class="card-title">Ouvidoria</h5>
              <div class="homeDocumentosDivisor my-2"></div>

              <% for(var i=0; i < contratos.length; i++) {%>
